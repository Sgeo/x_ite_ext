{

  "manifest_version": 2,
  "name": "X_ITE",
  "version": "0.2",
  "version_name": "0.2 alpha",

  "description": "View VRML files in X_ITE 4.6.10",
  
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  
  "icons": {
    "128": "x_ite/assets/images/logo.png"
  },
  
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  
  "web_accessible_resources": [
      "x_ite/*",
      "x_ite_mods/*"
  ],
  
  "options_ui": {
    "page": "options.htm",
    "open_in_tab": false
  }

}